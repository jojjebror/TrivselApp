{
    "$schema":"http://json-schema.org/draft-04/schema#",
    "title":"Swish pre-filled direct payment",
    "description":"Protocol for switching to pre-fill direct payment in Swish.",
    "definitions":{
       "editable":{
          "description ":"Controls if user can modify this value in Swish app or not",
          "type":"object",
          "properties":{
             "editable":{
                "type":"boolean",
                "default":false
             }
          }
       },
       "swishString":{
          "type":"object",
          "properties":{
             "value":{
                "type":"string"
             }
          },
          "required":[
             "value"
          ]
       },
       "swishNumber":{
          "type":"object",
          "properties":{
             "value":{
                "type":"number"
             }
          },
          "required":[
             "value"
          ]
       }
    },
    "type":"object",
    "properties":{
       "version":{
          "description":"Protocol version, so far only version 1 defined",
          "type":"integer",
          "minimum":1,
          "maximum":1
       },
       "payee":{
          "description":"Payment receiver",
          "allOf":[
             {
                "$ref":"#/definitions/editable"
             },
             {
                "$ref":"#/definitions/swishString"
             }
          ]
       },
       "amount":{
          "description":"Payment amount",
          "allOf":[
             {
                "$ref":"#/definitions/editable"
             },
             {
                "$ref":"#/definitions/swishNumber"
             }
          ]
       },
       "message":{
          "description":"Message for payment",
          "allOf":[{
            "$ref":"#/definitions/editable"
         },
         {
            "$ref":"#/definitions/swishString"
         }
      ]
   }
},
"required":[
   "version"
],
"anyOf":[
   {
      "required":[
         "payee"
      ]
   },
   {
      "required":[
         "amount"
      ]
   },
   {
      "required":[
         "message"
      ]
   }
],
"additionalProperties":false,
"maxProperties":4
}